# Development Dockerfile for .NET API
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 5000

# Install tools for development
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    unzip \
    && rm -rf /var/lib/apt/lists/*

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy project file
COPY ["src/api/HoHemaLoans.Api/HoHemaLoans.Api.csproj", "HoHemaLoans.Api/"]

# Restore dependencies
RUN dotnet restore "HoHemaLoans.Api/HoHemaLoans.Api.csproj"

# Copy source code
COPY ["src/api/HoHemaLoans.Api/", "HoHemaLoans.Api/"]

# Build application
WORKDIR "/src/HoHemaLoans.Api"
RUN dotnet build "HoHemaLoans.Api.csproj" -c Debug -o /app/build

FROM build AS publish
RUN dotnet publish "HoHemaLoans.Api.csproj" -c Debug -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

# Install Entity Framework CLI tools
RUN dotnet tool install --global dotnet-ef
ENV PATH="${PATH}:/root/.dotnet/tools"

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5000/api/health || exit 1

ENTRYPOINT ["dotnet", "HoHemaLoans.Api.dll"]