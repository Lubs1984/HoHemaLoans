# Development Dockerfile for .NET API
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

# Install tools for development
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    unzip \
    && rm -rf /var/lib/apt/lists/*

FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy project files
COPY ["HoHema.Api/HoHema.Api.csproj", "HoHema.Api/"]
COPY ["HoHema.Core/HoHema.Core.csproj", "HoHema.Core/"]
COPY ["HoHema.Infrastructure/HoHema.Infrastructure.csproj", "HoHema.Infrastructure/"]

# Restore dependencies
RUN dotnet restore "HoHema.Api/HoHema.Api.csproj"

# Copy source code
COPY . .

# Build application
WORKDIR "/src/HoHema.Api"
RUN dotnet build "HoHema.Api.csproj" -c Debug -o /app/build

FROM build AS publish
RUN dotnet publish "HoHema.Api.csproj" -c Debug -o /app/publish /p:UseAppHost=false

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .

# Install Entity Framework CLI tools
RUN dotnet tool install --global dotnet-ef
ENV PATH="${PATH}:/root/.dotnet/tools"

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
    CMD curl -f http://localhost/api/health || exit 1

ENTRYPOINT ["dotnet", "HoHema.Api.dll"]