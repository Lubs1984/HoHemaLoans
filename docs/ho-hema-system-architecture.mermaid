flowchart TB
    subgraph "WhatsApp Business Platform"
        WA[WhatsApp Bot Interface]
        WA_MENU[Interactive Menu System]
        WA_INPUT[Input Collection Forms]
        WA_OTP[OTP Verification]
    end
    
    subgraph "Ho Hema Core System"
        HS[Ho Hema Software Core]
        CALC[Affordability Calculator]
        PARAM[Parameter Management]
        SCHED[Schedule Generator]
        DOC[Document Generator]
        NOTIF[Notification System]
    end
    
    subgraph "Integration Layer"
        API[API Gateway]
        AUTH[Authentication Service]
        VALID[Validation Engine]
        ENCRYPT[Encryption Service]
    end
    
    subgraph "External Systems"
        PAYROLL[(Payroll System)]
        TA[(Time & Attendance)]
        BANK[(Banking System)]
        NCR[(NCR Compliance)]
    end
    
    subgraph "Data Storage"
        EMPDB[(Employee Database)]
        LOANDB[(Loan Database)]
        AUDITDB[(Audit Trail)]
        PARAMDB[(Parameters Database)]
    end
    
    %% User Interaction Flow
    USER[Employee] --> WA
    WA --> WA_MENU
    WA_MENU --> WA_INPUT
    WA_INPUT --> API
    
    %% Core Processing
    API --> AUTH
    AUTH --> VALID
    VALID --> HS
    HS --> CALC
    HS --> PARAM
    
    %% Data Retrieval
    HS --> PAYROLL
    HS --> TA
    PAYROLL --> EMPDB
    TA --> EMPDB
    
    %% Calculation and Validation
    CALC --> PARAMDB
    CALC --> EMPDB
    CALC --> LOANDB
    
    %% Document Generation
    HS --> DOC
    DOC --> WA_INPUT
    
    %% OTP Process
    WA_INPUT --> WA_OTP
    WA_OTP --> AUTH
    AUTH --> NOTIF
    
    %% Payment Processing
    HS --> SCHED
    SCHED --> BANK
    SCHED --> PAYROLL
    
    %% Compliance and Audit
    HS --> NCR
    HS --> AUDITDB
    VALID --> AUDITDB
    
    %% Feedback Loop
    BANK --> NOTIF
    PAYROLL --> NOTIF
    NOTIF --> WA
    
    %% System Monitoring
    AUDITDB --> ADMIN[Administrator Dashboard]
    PARAM --> ADMIN
    
